<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link class="form-control" href="/public/src/components/Profile/Profile.jsx">
    <style>
        body         { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                <% } else { %>
                    <a href="/connect-local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>

        <!-- LOCAL INFORMATION -->
        <div class="container">
          <form onSubmit="submit">
            <label>
              Name:
              <input type="text"/>
            </label>
            <br/>
            <label>
              Last Name:
              <input type="text" />
            </label>
            <br/>
            <label>
              Nickname:
              <input type="text" />
            </label>
            <br/>
            <label>
              Email:
              <input type="text" />
            </label>
            <br/>
            <label>
              Phone:
              <input type="text" />
            </label>
            <br/>
            <label>
              Birthday:
              <input type="text" />
            </label>
            <br/>
            <label>
              Gender:
              <input type="text" />
            </label>
            <br/>
            <label>
              Nationality:
              <input type="text" />
            </label>
            <br/>
            <label>
              Identification:
              <input type="text" />
            </label>
            <br/>
            <label>
              Education Level:
              <input type="text" />
            </label>
            <br/>
            <label>
              Coding Experience:
              <input type="text" />
            </label>
            <br/>
            <label>
              Personal Reference:
              <input type="text" />
            </label>
            <br/>
            <label>
              Holacode Discovery:
              <input type="text" />
            </label>
            <br/>
            <label>
              Commitment:
              <input type="text" />
            </label>
            <br/>
            <input type="submit" value="Submit"/>
          </form>

          </div>
    </div>


</div>
</body>
</html>
